{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // 是否允许编译js文件
    "skipLibCheck": true, // 跳过lib检查
    "esModuleInterop": true, // 是否允许使用es模块
    "allowSyntheticDefaultImports": true, // 是否允许默认导入
    "strict": true, // 是否启用严格模式
    "forceConsistentCasingInFileNames": true, // 是否强制文件名大小写一致
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // 模块规范
    "moduleResolution": "node", // 模块解析策略
    "resolveJsonModule": true, // 是否允许导入json模块
    "isolatedModules": true, // 是否启用独立模块
    "noEmit": true, // 是否不生成输出文件
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
